
<%= form_for(@inscription) do |f| %>
  <% if @inscription.errors.any? %>
    <% @inscription.errors.full_messages.each do |msg| %>
        <li class="text-danger"><%= msg %></li>
    <% end %>
  <% end %>
    <div class="form-group">
      <%= f.label :name, :class => "control-label" %><br>
      <%= f.text_field :name, size: 40, :class => "form-control", :placeholder=>"Enter name" %>
    </div>
    <div class="form-group">
      <%= f.label :description, :class => "control-label" %>
      <%= f.text_area :description, rows: 4,cols: 40, :class => "form-control", :placeholder=>"Enter description" %>
    </div>
    <div class="form-group">
      <%= f.label :positive, :class => "control-label" %>
      <%= f.select(:positive, Inscription::TYPE, {prompt: 'Select type inscription'}, {:class =>"form-control"}, ) %>
    </div>
    <div class="form-group">
      <%= f.submit 'Place Inscription',data: {disable_with: 'loading...'}, :class => "btn btn-default" %>
    </div>

<% end %>
